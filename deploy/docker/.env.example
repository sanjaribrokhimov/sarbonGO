
# --- Сервер ---
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=30s

# --- PostgreSQL (проект Sarbon) ---
POSTGRES_DSN=postgres://test:test@localhost:5432/test?sslmode=disable
POSTGRES_PASSWORD=test
POSTGRES_DB=test
POSTGRES_MAX_CONNS=25
POSTGRES_MIN_CONNS=5

# --- pgAdmin (управление БД в браузере: http://localhost:5050) ---
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# --- Redis (кэш, rate limit, сессии) ---
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# --- Хранилище файлов (водители: ADR, фото машины) ---
STORAGE_PATH=storage

# --- Безопасность ---
# Секрет для подписи JWT пользователя (при логине)
JWT_SECRET=change-me-in-production-min-32-chars
# Токены приложений — только с ними frontend/mobile могут вызывать API (отдельно для фронта и для мобилок)
FRONTEND_CLIENT_TOKEN=your-frontend-app-token-min-16-chars
MOBILE_CLIENT_TOKEN=your-mobile-app-token-min-16-chars
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# --- Авторизация по OTP (Telegram Gateway) ---
# Токен: https://gateway.telegram.org → Account → API → Copy Token
TELEGRAM_GATEWAY_TOKEN=
# Время жизни OTP в БД (сек); 180–300 (3–5 мин)
OTP_TTL_SEC=300
# Макс. попыток ввода кода (3–5)
OTP_ATTEMPTS_MAX=5
# Макс. отправок OTP на один номер за окно (rate limit)
OTP_RATE_LIMIT_PER_PHONE=3
